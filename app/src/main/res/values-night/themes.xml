<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AquaTraking" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/darkActionBar</item>
        <item name="colorPrimaryVariant">@color/darkActionBar</item>
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="bottomNavigationStyle">@style/Widget.AquaTraking.BottomNavigationView</item>
    </style>

    <style name="Widget.AquaTraking.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/darkActionBar</item>
        <item name="android:itemBackground">@color/darkActionBar</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>
</resources>